@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intro.js/5.1.0/intro.min.js" integrity="sha512-B0B1bdTGi9XHtoCINbtR6z9Vi8IYvvtImIE8KWMtqWAVUt2Wn2k69GxM7ya/3rQcz/Pgm/o1WcDU347/5k202A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        function intro() {
            introJs().start();
        }

        function preview() {
            var ban = [banner_1, banner_2, banner_3];
            const [file] = img_banner.files;
            // banner index
            var index = $('#banner_sel').val();
            // title
            var title = $('#inp_tit').val();
            var content = $('#inp_content').val();

            var index_int = parseInt(index);
            var temp_tit = `#title_${index_int + 1}`;
            var temp_content = `#content_${index_int + 1}`;

            if (file != null) {
                ban[index].src = URL.createObjectURL(file);
            }
            if (title !== '') {
                $(temp_tit).html(title);
            }
            if (content !== '') {
                $(temp_content).html(content);
            }
            $('#template-mo-zay-hero-carousel').carousel(index_int);
        }
    </script>
}
